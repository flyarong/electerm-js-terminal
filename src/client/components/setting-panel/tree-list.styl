.tree-list
    .ant-tree-child-tree
      span.ant-tree-switcher.ant-tree-switcher-noop
        display none

.tree-control-btn
  display none
  margin-left 3px
  width 16px
  line-height 26px
  height 20px
.tree-item
  display flex
  &.is-category
    .tree-item-title
      font-weight bold
  &:hover
    .tree-control-btn
      display inline-block
      vertical-align middle
.tree-item-title
  flex-grow 1
  height 20px
  max-width 300px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
.sidebar-panel .tree-item-title
  max-width 180px
.with-plus
  &:after
    content '+'
    position absolute
    font-size 16px
    top 2px
    right 2px
